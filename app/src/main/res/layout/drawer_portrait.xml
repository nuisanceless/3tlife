<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_portrait_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_head"
            />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="@string/not_login"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_user_info"
        style="@style/drawer_item"
        >
        <ImageView
            style="@style/drawer_icon"
            android:src="@drawable/user_info_icon"/>
        <TextView
            style="@style/drawer_text"
            android:text="@string/user_info"
            />
        <ImageView
            style="@style/drawer_arrow"
            android:src="@drawable/right_arrow"/>
        <ImageView
            style="@style/drawer_divider"/>
    </RelativeLayout>

