<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bgcolor">

    <cn.life3t.life3t.common.CommonTitle_
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:title_text="@string/coupon"
        app:enable_back="@drawable/btn_back"
        />
    <LinearLayout
        android:id="@+id/layout_exchange"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@id/common_title"
        android:padding="14dp"
        android:background="@android:color/white">
        <cn.life3t.life3t.common.ClearEditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="14dp"
            android:hint="@string/hint_input_coupon"
            android:background="@drawable/edit_bg"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/exchange"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:background="@drawable/btn_blue"
            android:text="@string/exchange"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"/>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_invite"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp">
        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_confirm_selector"
            android:text="@string/invite_friend"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/share"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/share_coupon_semi"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/my_invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_exchange"
        android:layout_above="@id/layout_invite"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />
</RelativeLayout>