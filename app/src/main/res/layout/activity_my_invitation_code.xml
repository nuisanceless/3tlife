<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bgcolor">
    <cn.life3t.life3t.common.CommonTitle_
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/my_invitation_code"
        app:enable_back="@drawable/btn_back"
        />

    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="14dp"
        android:background="@drawable/btn_confirm_selector"
        android:text="@string/share_my_invitation_code"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_title"
        android:layout_above="@id/share">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/envelope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_envelope"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/envelope"
                android:layout_marginTop="21dp"
                android:text="@string/share_and_get"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_marginTop="66dp"
                android:text="@string/share_coupon"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/my_invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_title"
                android:layout_marginTop="11dp"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </ScrollView>

</RelativeLayout>